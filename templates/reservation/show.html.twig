{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date_res</th>
                <td>{{ reservation.dateRes ? reservation.dateRes|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_res</th>
                <td>{{ reservation.heureRes }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ reservation.prix }}</td>
            </tr>
            <tr>
                <th>Nb_place</th>
                <td>{{ reservation.nbPlace }}</td>
            </tr>
            <tr>
                <th>Prix_totale</th>
                <td>{{ reservation.prixTotale }}</td>
            </tr>
            <tr>
                <th>Type_ticket</th>
                <td>{{ reservation.TypeTicket }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}

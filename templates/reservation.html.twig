        (function ($) {
                "use strict";

            $( "#reservation_nb_place" )
    .keyup(function() {
        var value = $( this ).val();
        $( "#xxp" ).text( value );
    })
    .keyup();
        })(jQuery);
    </script>
{% endblock %}


